    async Task OnChange(InputFileChangeEventArgs e)
    {
        var file = e.File;

        if (file != null)
        {
            var fileUploadModel = new FileUploadModel
            {
                FileName = file.Name,
                Stream = file.OpenReadStream()
            };

            await WordDocumentService.UploadFileAsync(fileUploadModel);
        }
    }

